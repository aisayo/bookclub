<h1>Add a new book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @book do |f| %>

          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>

          <%= f.label :author %>
          <%= f.text_field :author, class: 'form-control' %>

          <%= f.submit "Create Book", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
