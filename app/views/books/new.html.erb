<h1>Add a new book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for @book do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>


          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>

          <%= f.label :author %>
          <%= f.text_field :author, class: 'form-control' %>


            <%= f.fields_for :reviews do |rev| %>
            <%= rev.label :review_title %>
            <%= rev.text_field :title %>

            <%= rev.label :review_content %>
            <%= rev.text_area :content %>
            <% end %>


          <%= f.submit %>

    <% end %>

  </div>
</div>
