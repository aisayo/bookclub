<h1><%= @book.title.titleize %></h1>

<br>
<br>

<h2><b> Reviews: </b></h2>

  <% @book.reviews.each do |review| %>
    <b>Title:</b> <%= review.title %><br>
    <b>Review:</b> <%= review.content %><br>
    <b>By:</b> <%= link_to review.user.username, user_path(review.user) %>
  <% end %>


<br>
<br>
<br>

<% if logged_in? %>
<%= link_to "Add A Review", new_book_review_path(@book), class: "btn btn-lg btn-primary" %>
<% end %>
