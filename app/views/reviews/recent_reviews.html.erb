<h1>Recent Reviews</h1>

<% @recent_reviews.each do |review| %>
<ul>
  <h4><li>Book: <%= link_to review.book.title, book_path(review.book) %></li></h4>
  <b>Title:</b> <%= review.title %><br>
  <b>Content:</b> <%= review.content %><br>
  <b>Posted:</b> <%= review.created_at %><br>
  <b>By:</b> <%= link_to review.user.username, user_path(review.user) %>
</ul>

<% end %>
